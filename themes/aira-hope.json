{
  "$schema": "vscode://schemas/color-theme",
  "name": "Aira Hope",
  "type": "dark",

  "colors": {
    // Base colors
    "foreground": "#e5e5e5",
    "focusBorder": "#e5e5e544",
    "icon.foreground": "#909cc3",
    "widget.border": "#404657",
    // "widget.shadow": "#404657",
    "descriptionForeground": "#e5e5e5",

    // Buttons
    "button.background": "#50E191",
    "button.hoverBackground": "#50E191dd",
    "button.foreground": "#1C2834",
    "button.secondaryBackground": "#50e191",
    "button.secondaryForeground": "#1C2834",

    // Progress Bar
    "progressBar.background": "#50E191",

    // Editor
    "editor.background": "#131C24",
    "editor.foreground": "#e5e5e5",
    "editorLineNumber.foreground": "#404657",
    "editorLineNumber.activeForeground": "#50E191",
    "editor.lineHighlightBackground": "#1C2834",
    "editorCursor.foreground": "#E9C46A",
    "editor.selectionBackground": "#404657",
    "editor.selectionHighlightBackground": "#404657",
    "editor.findMatchBackground": "#404657",
    "editor.findMatchBorder": "#909CC3",
    "editor.findMatchHighlightBackground": "#40465780",
    "editor.hoverHighlightBackground": "#404657",
    "editor.wordHighlightBackground": "#404657",
    "editor.wordHighlightStrongBackground": "#404657",
    "editorIndentGuide.background1": "#35AD6833",
    "editorIndentGuide.activeBackground1": "#35AD6890",
    "editorError.foreground": "#EF4E5B",
    "editorWarning.foreground": "#E9C46A",
    "editorInfo.foreground": "#63ACFF",

    // Editor widget [find/replace]
    "editorWidget.background": "#1C2834",
    "editorWidget.border": "#404657",
    "editorHoverWidget.background": "#1C2834",
    "editorHoverWidget.border": "#909CC360",

    // Editor Groups & Tabs
    "editorGroup.dropBackground": "#909CC360",
    "editorGroupHeader.noTabsBackground": "#1C2834", // bg para tabs desativadas
    "editorGroupHeader.tabsBackground": "#131C24",
    "editorGroupHeader.tabsBorder": "#1C2834",
    "tab.activeBackground": "#1C2834",
    "tab.activeForeground": "#e5e5e5",
    "tab.activeBorderTop": "#50e191",
    "tab.inactiveBackground": "#131C24",
    "tab.inactiveForeground": "#909CC3",
    "tab.border": "#1C2834",

    // Side bar - [Explorer] Onde fica os arquivos
    "sideBar.background": "#131C24",
    "sideBar.border": "#404657",
    "sideBarSectionHeader.background": "#1C2834",
    "sideBarSectionHeader.foreground": "#e5e5e5",

    // Lists & Trees - [Explore] files
    "list.activeSelectionBackground": "#404657",
    "list.activeSelectionForeground": "#e5e5e5",
    "list.dropBackground": "#404657",
    "list.focusBackground": "#404657",
    "list.hoverBackground": "#404657",
    "list.inactiveSelectionBackground": "#1C2834",
    "list.errorForeground": "#EF4E5B", // FIXME: Change color???
    "list.warningForeground": "#63ACFF",

    // Input Control - [search]
    "input.background": "#131C24",
    "input.placeholderForeground": "#a5a5a5",
    "input.border": "#909CC3",
    "inputOption.activeBorder": "#909CC3",

    // Scrollbar Control
    "scrollbar.shadow": "#1C2834",
    "scrollbarSlider.activeBackground": "#404657aa",
    "scrollbarSlider.background": "#404657aa",
    "scrollbarSlider.hoverBackground": "#404657",

    // Activity Bar - Onde fica os icons [files, search, extension...]
    "activityBar.background": "#131C24",
    "activityBar.dropBorder": "#50E191",
    "activityBar.foreground": "#909CC3",
    "activityBar.inactiveForeground": "#404657",
    "activityBar.border": "#1C2834",
    "activityBarBadge.background": "#50E191",
    "activityBarBadge.foreground": "#131C24",
    "activityBar.activeBackground": "#1C2834",
    "activityBar.activeFocusBorder": "#50E191",
    "activityBar.activeBorder": "#50E191",

    // Status Bar - Barra de baixo [footer]
    "statusBar.background": "#131C24",
    "statusBar.foreground": "#e5e5e5aa",
    "statusBar.border": "#404657",

    // Panel Colors - Barra de baixo, contêm o terminal e mais.
    "panel.background": "#1C2834",
    "panel.border": "#404657",
    "panel.dropBorder": "#50E191",
    "panelTitle.activeBorder": "#50E191",
    "panelTitle.activeForeground": "#f2f3f7",
    "panelTitle.inactiveForeground": "#e5e5e5aa",
    "panelInput.border": "#404657",

    // Peek View - menu flutuante, ctrl + click em cima de uma função ativa.
    "peekView.border": "#63ACFF",
    "peekViewEditor.background": "#1C2834",
    "peekViewEditor.matchHighlightBackground": "#404657",
    "peekViewResult.background": "#131C24",
    "peekViewResult.selectionBackground": "#404657",
    "peekViewTitle.background": "#1C2834",
    "peekViewTitleDescription.foreground": "#e5e5e5aa",

    // Title Bar Colors
    "titleBar.activeBackground": "#131C24",

    // Menu Bar Colors
    "menu.foreground": "#e5e5e5",

    // Quick picker color - (ctrl + p)

    // Git Colors
    // "gitDecoration.addedResourceForeground": "#63ACFF",
    "gitDecoration.modifiedResourceForeground": "#e9c46a",
    "gitDecoration.deletedResourceForeground": "#EC3A37F5",
    "gitDecoration.untrackedResourceForeground": "#50E191",
    "gitDecoration.ignoredResourceForeground": "#909CC3",
    "gitDecoration.conflictingResourceForeground": "#FF916E",

    // Integrated Terminal
    "terminal.background": "#131C24",
    "terminal.foreground": "#e5e5e5",
    "terminal.selectionBackground": "#909CC3",
    "terminal.ansiBlack": "#1C2834",
    "terminal.ansiRed": "#EF4E5B",
    "terminal.ansiGreen": "#50E191",
    "terminal.ansiYellow": "#E9C46A",
    "terminal.ansiBlue": "#63ACFF",
    "terminal.ansiMagenta": "#E747D9",
    "terminal.ansiWhite": "#e5e5e5",
    "terminal.ansiBrightBlack": "#435056",
    "terminal.ansiBrightBlue": "#909CC3",

    // Dropdown control
    "dropdown.background": "#131C24",
    "dropdown.listBackground": "#131C24",
    "dropdown.border": "#131C24",
    "dropdown.foreground": "#50E191",

    // Badge - Emblema de contagem de pesquisa
    "badge.foreground": "#131C24",
    "badge.background": "#50E191",

    // Sinalização de modificação no codigo vinculado ao .git
    "editorGutter.addedBackground": "#35AD6880",
    "editorGutter.deletedBackground": "#EF4E5Bc0",
    "editorGutter.modifiedBackground": "#E9C46A80"
  },

  "tokenColors": [
    {
      "name": "string",
      "scope": "string",
      "settings": {
        // "foreground": "#909cc3",
        "foreground": "#e9c46a"
      }
    },
    {
      "name": "comments",
      "scope": "comment",
      "settings": {
        "foreground": "#757e8f"
      }
    },
    {
      "name": "reserved keywords",
      "scope": ["storage", "keyword"],
      "settings": {
        "foreground": "#50e191"
      }
    },
    {
      "name": "class declaration",
      "scope": ["entity.name.type.class"],
      "settings": {
        "foreground": "#ff916e"
      }
    },
    {
      "name": "class inherited",
      "scope": ["entity.other.inherited-class.ts"],
      "settings": {
        "foreground": "#ff916e",
        "fontStyle": "italic"
      }
    },
    {
      "name": "functions",
      "scope": ["entity.name.function"],
      "settings": {
        "foreground": "#C8B6FF"
      }
    },
    {
      "name": "function parameter",
      "scope": [
        "variable.parameter",
        "entity.name.variable.parameter",
        "meta.function.definition.rust",
        "meta.function.parameters.php",
        "meta.function-call.java"
      ],
      "settings": {
        "foreground": "#63acff"
      }
    },
    {
      "name": "types",
      "scope": [
        "support.type.primitive",
        "entity.name.type.numeric.rust",
        "entity.name.type.primitive.rust",
        "variable.language.self.rust",
        "keyword.type.cs",
        "entity.name.type.kotlin"
      ],
      "settings": {
        "foreground": "#50e191"
      }
    },
    {
      "name": "variable other",
      "scope": ["variable.language.this", "variable.other.object"],
      "settings": {
        "foreground": "#63acff"
      }
    },
    {
      "name": "interpolation",
      "scope": [
        "meta.interpolation",
        "punctuation.definition.template-expression"
      ],
      "settings": {
        "foreground": "#909cc3"
      }
    },
    {
      "name": "numbers",
      "scope": [
        "constant.numeric",
        "constant.numeric.decimal",
        "constant.numeric.dec.python",
        "constant.numeric.float"
      ],
      "settings": {
        "foreground": "#ff916e"
      }
    },
    {
      "name": "entity names by language",
      "scope": ["entity.name.type"],
      "settings": {
        "foreground": "#ff916e"
      }
    },
    {
      "name": "Operator",
      "scope": ["keyword.operator"],
      "settings": {
        "foreground": "#e5e5e5"
      }
    },
    {
      "name": "Object property",
      "scope": [
        "variable.other.object.property",
        "variable.other.property",
        "entity.other.attribute"
      ],
      "settings": {
        "foreground": "#e5e5e5"
      }
    },
    {
      "name": "control flow keywords",
      "scope": ["keyword.control.flow"],
      "settings": {
        // "foreground": "#ff916e",
        "fontStyle": "italic"
      }
    },
    {
      "name": "constant variable",
      "scope": ["constant"],
      "settings": {
        "foreground": "#63acff"
        // "fontStyle": "italic"
      }
    },

    // ----- TYPESCRIPT -----
    {
      "name": "TYPESCRIPT - types",
      "scope": ["support.type.primitive.ts", "entity.name.type.ts", "support.type.builtin.ts"],
      "settings": {
        "foreground": "#909cc3"
      }
    },
    {
      "name": "TYPESCRIPT - keyword ponctuation",
      "scope": ["keyword.operator.type.annotation.ts"],
      "settings": {
        "foreground": "#e5e5e5"
      }
    },
    {
      "name": "TYPESCRIPT - keyword new",
      "scope": ["keyword.operator.new.ts"],
      "settings": {
        "foreground": "#909cc3",
        "fontStyle": "italic"
      }
    },
    {
      "name": "TYPESCRIPT - control flow",
      "scope": ["keyword.control.flow.ts"],
      "settings": {
        "foreground": "#909cc3"
      }
    },
    {
      "name": "TYPESCRIPT - keyword ponctuation",
      "scope": [
        "keyword.operator.optional",
        "keyword.operator.logical",
        "keyword.operator.type",
        "punctuation.accessor.optional",
        "keyword.operator.ternary"
      ],
      "settings": {
        "foreground": "#ff916e"
      }
    },

    // ----- PYTHON -----
    {
      "name": "PYTHON - variable spacial",
      "scope": [
        "variable.language.special.self.python",
        "variable.parameter.function.language.special.self.python"
      ],
      "settings": {
        "foreground": "#50e191"
      }
    },

    // ----- YML -----
    {
      "name": "YML - TAG",
      "scope": ["entity.name.tag.yaml"],
      "settings": {
        "foreground": "#50e191"
      }
    },
    {
      "name": "YML - value",
      "scope": ["string.unquoted.plain.out.yaml"],
      "settings": {
        "foreground": "#e9c46a"
      }
    },

    // ----- JSON -----
    {
      "name": "JSON - key",
      "scope": ["string.json"],
      "settings": {
        "foreground": "#50e191"
      }
    },

    // ----- HTML-----
    {
      "name": "HTML - tag",
      "scope": ["entity.name.tag"],
      "settings": {
        "foreground": "#50e191"
      }
    },
    {
      "name": "HTML - attribute",
      "scope": ["entity.other.attribute-name"],
      "settings": {
        "foreground": "#e5e5e5"
      }
    },
    {
      "name": "HTML - tag",
      "scope": ["punctuation.definition.tag"],
      "settings": {
        "foreground": "#a4b0d6e1"
      }
    },

    // ----- JSX -----
    {
      "name": "JSX - component",
      "scope": ["support.class.component"],
      "settings": {
        "foreground": "#C8B6FF"
      }
    },
    {
      "name": "JSX - operator assignment",
      "scope": [
        "keyword.operator.assignment.tsx",
        "keyword.operator.assignment.jsx"
      ],
      "settings": {
        "foreground": "#909cc3"
      }
    },
    {
      "name": "JSX - attribute",
      "scope": [
        "entity.other.attribute-name.tsx",
        "entity.other.attribute-name.jsx"
      ],
      "settings": {
        // "foreground": "#a4b0d6"
      }
    },
    {
      "name": "JSX - attribute value",
      "scope": ["variable.other.readwrite.tsx", "variable.other.readwrite.jsx"],
      "settings": {
        "foreground": "#909cc3"
      }
    },

    // ----- CSS -----
    {
      "name": "CSS - class name",
      "scope": ["entity.other.attribute-name.class.css"],
      "settings": {
        "foreground": "#50e191"
      }
    },
    {
      "name": "CSS - id name",
      "scope": ["entity.other.attribute-name.id.css"],
      "settings": {
        "foreground": "#ff916e"
      }
    },
    {
      "name": "CSS - property key",
      "scope": [
        "support.type.property-name.css",
        "support.type.property-name.media.css"
      ],
      "settings": {
        "foreground": "#e5e5e5"
      }
    },
    {
      "name": "CSS - property value",
      "scope": ["support.constant.property-value.css"],
      "settings": {
        "foreground": "#909cc3",
        "fontStyle": "italic"
      }
    },
    {
      "name": "CSS - pseudo class",
      "scope": ["entity.other.attribute-name.pseudo-class.css"],
      "settings": {
        "foreground": "#C8B6FF"
      }
    },
    {
      "name": "CSS - pseudo element",
      "scope": ["entity.other.attribute-name.pseudo-element.css"],
      "settings": {
        "foreground": "#C8B6FF"
      }
    },
    {
      "name": "CSS - function",
      "scope": ["support.function.misc.css", "support.function.calc"],
      "settings": {
        "foreground": "#C8B6FF"
      }
    },
    {
      "name": "CSS - variable",
      "scope": ["variable.css"],
      "settings": {
        // "foreground": "#909cc3"
        "fontStyle": "italic"
      }
    },
    {
      "name": "CSS - number",
      "scope": ["constant.numeric.css"],
      "settings": {
        // "foreground": "#ff916e",
        "fontStyle": "italic"
      }
    },
    {
      "name": "CSS - unity",
      "scope": ["keyword.other.unit"],
      "settings": {
        "foreground": "#ff916e",
        "fontStyle": "italic"
      }
    },
    {
      "name": "CSS - variable argument",
      "scope": ["variable.argument"],
      "settings": {
        "foreground": "#909cc3",
        "fontStyle": "italic"
      }
    },
    {
      "name": "CSS - operators arithmetic",
      "scope": [
        "keyword.operator.arithmetic.css",
        "keyword.operator.pattern.css"
      ],
      "settings": {
        "foreground": "#909cc3",
        "fontStyle": "italic"
      }
    },
    {
      "name": "CSS - operators arithmetic",
      "scope": ["constant.other.color"],
      "settings": {
        "foreground": "#909cc3",
        "fontStyle": "italic underline"
      }
    },

    // ----- MARKDOWN -----
    {
      "name": "MARKDOWN - titles",
      "scope": ["entity.name.section.markdown"],
      "settings": {
        "foreground": "#50e191"
      }
    },
    {
      "name": "MARKDOWN - title ponctuation",
      "scope": ["punctuation.definition.heading.markdown"],
      "settings": {
        "foreground": "#909cc3"
      }
    },
    {
      "name": "MARKDOWN - ponctuations",
      "scope": [
        "punctuation.definition.list.begin.markdown",
        "punctuation.definition.bold.markdown",
        "punctuation.definition.italic.markdown",
        "punctuation.definition.table.markdown",
        "punctuation.separator.table.markdown",
        "punctuation.definition.strikethrough.markdown",
        "punctuation.definition.math.begin.markdown",
        "punctuation.definition.math.end.markdown",
        "punctuation.definition.quote.begin.markdown"
      ],
      "settings": {
        "foreground": "#ff916e"
      }
    },
    {
      "name": "MARKDOWN - base text",
      "scope": ["text.html.markdown"],
      "settings": {
        "foreground": "#e5e5e5"
      }
    },
    {
      "name": "MARKDOWN -  bold text",
      "scope": ["markup.bold.markdown"],
      "settings": {
        "fontStyle": "bold"
      }
    },
    {
      "name": "MARKDOWN -  italic text",
      "scope": ["markup.italic.markdown"],
      "settings": {
        "fontStyle": "italic"
      }
    },
    {
      "name": "MARKDOWN - link",
      "scope": ["markup.underline.link"],
      "settings": {
        "foreground": "#63acff",
        "fontStyle": "italic"
      }
    },
    {
      "name": "MARKDOWN - link text",
      "scope": ["string.other.link"],
      "settings": {
        "foreground": "#50e191",
        "fontStyle": "italic"
      }
    },
    {
      "name": "MARKDOWN - strikethrough text",
      "scope": ["markup.strikethrough.markdown"],
      "settings": {
        // "foreground": "#50e191",
        "fontStyle": "strikethrough"
      }
    },
    {
      "name": "MARKDOWN - math",
      "scope": ["meta.embedded.math.markdown"],
      "settings": {
        "foreground": "#909cc3",
        "fontStyle": "italic"
      }
    },
    {
      "name": "MARKDOWN - other links",
      "scope": [
        "string.other.link.description.title.markdown",
        "string.other.link.description.markdown",
        "string.other.link.title.markdown"
      ],
      "settings": {
        "foreground": "#909cc3",
        "fontStyle": "italic"
      }
    },
    // ---- RUST -----
    {
      "name": "RUST - keyword ponctuation",
      "scope": [
        "keyword.operator.key-value.rust",
        "keyword.operator.namespace.rust"
      ],
      "settings": {
        "foreground": "#e5e5e5"
      }
    }
  ]
}
